@model SCIFTAN.BLL.Models.FREELANCER_DOC_INFO_Model

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm("Create",
                  "FreelancerDoc",
                  FormMethod.Post,
                  new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FREELANCER_DOC_INFO_Model</h4>
        <h3>@ViewBag.ValidationMsg</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Picture_Path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="photo" id="photo" /><br><br>   
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NID_Path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="nid" id="nid" /><br><br>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PVC_Path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="pvc" id="pvc" /><br><br>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
