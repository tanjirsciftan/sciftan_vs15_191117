@model SCIFTAN.BLL.Models.FREELANCER_DOC_INFO_Model

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h4><i><strong>Add Docs</strong> </i></h4>
<hr />
<div class="well">
    @using (Html.BeginForm("Create",
                                                          "FreelancerDoc",
                                                          FormMethod.Post,
                                                          new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h3>@ViewBag.ValidationMsg</h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    Photo<input type="file" name="photo" id="photo" /><br><br>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    National Identity Card<input type="file" name="nid" id="nid" /><br><br>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Police Verification Certificate<input type="file" name="pvc" id="pvc" /><br><br>
                </div>
            </div>

        </div>

        <input type="submit" value="Add" class="btn btn-primary" />
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
